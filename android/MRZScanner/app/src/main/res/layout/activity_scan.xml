<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:tool="http://schemas.android.com/tools">

	<com.dynamsoft.dce.CameraView
		android:id="@+id/dce_camera_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent" />

	<TextView
		android:background="@color/dy_black_33"
		android:id="@+id/tv_start_license_error"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="24dp"
		android:layout_marginTop="110dp"
		android:textColor="@color/white"
		android:visibility="invisible"
		android:paddingHorizontal="5dp"
		android:paddingVertical="2dp"
		android:drawablePadding="5dp"
		android:layout_marginBottom="5dp"
		app:drawableLeftCompat="@drawable/icon_attention" />

	<TextView
		android:background="@color/dy_black_33"
		android:layout_below="@+id/tv_start_license_error"
		android:id="@+id/tv_init_license_error"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginHorizontal="24dp"
		android:textColor="@color/white"
		android:visibility="invisible"
		tool:visibility="visible"
		android:paddingHorizontal="5dp"
		android:paddingVertical="2dp"
		android:drawablePadding="5dp"
		app:drawableLeftCompat="@drawable/icon_attention" />

	<ImageView
		android:id="@+id/iv_beep"
		android:layout_width="56dp"
		android:layout_height="56dp"
		android:layout_marginStart="23dp"
		android:layout_marginTop="17dp"
		android:background="@drawable/icon_music" />

	<ImageView
		android:layout_width="match_parent"
		android:layout_height="43dp"
		android:layout_centerInParent="true"
		android:layout_marginHorizontal="24dp"
		android:background="@drawable/passport_frame" />

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_centerHorizontal="true"
		android:layout_marginBottom="36dp"
		android:text="@string/powered_by_dynamsoft"
		android:textColor="@color/dy_dark_grey"
		android:textSize="16sp" />

	<TextView
		android:id="@+id/tv_alert"
		android:layout_above="@id/tv_result"
		android:textColor="@color/red00"
		android:layout_marginHorizontal="40dp"
		android:layout_marginBottom="10dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"/>

	<TextView
		android:id="@+id/tv_result"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginBottom="50dp"
		android:layout_marginHorizontal="40dp"
		android:textColor="@color/white"
		android:layout_above="@id/tab_selector" />

	<com.dynamsoft.mrzscanner.TabSelector
		android:id="@+id/tab_selector"
		android:layout_marginHorizontal="50dp"
		android:layout_alignParentBottom="true"
		android:layout_width="match_parent"
		android:layout_marginBottom="99dp"
		android:layout_height="wrap_content"/>
</RelativeLayout>